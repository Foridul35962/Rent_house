<%-include('../partials/head') %>
<body>
    <%-include('../partials/nav') %>
    <div class="flex flex-col items-center justify-center min-h-screen bg-amber-50 py-2">
        <h1 class="text-3xl text-red-700 font-bold mb-6">
            Welcome to our website
        </h1>
        <form action="/add-home" method="post"
            class="flex flex-col w-full max-w-md gap-6 bg-white p-8 rounded-xl shadow-xl border border-amber-200">
            <div class="flex flex-col gap-2">
                <label for="name" class="text-lg font-semibold text-amber-700">Home Name:</label>
                <input type="text" id="name" name="houseName" placeholder="Enter home name"
                    class="border border-amber-400 rounded-lg px-4 py-2 focus:outline-none focus:border-amber-700 transition text-gray-800 bg-amber-50">
            </div>
            <div class="flex flex-col gap-2">
                <label for="price" class="text-lg font-semibold text-amber-700">Price:</label>
                <input type="number" id="price" name="price" placeholder="Enter the price"
                    class="border border-amber-400 rounded-lg px-4 py-2 focus:outline-none focus:border-amber-700 transition text-gray-800 bg-amber-50">
            </div>
            <div class="flex flex-col gap-2">
                <label for="location" class="text-lg font-semibold text-amber-700">Location:</label>
                <input type="text" id="location" name="location" placeholder="Enter the home location"
                    class="border border-amber-400 rounded-lg px-4 py-2 focus:outline-none focus:border-amber-700 transition text-gray-800 bg-amber-50">
            </div>
            <div class="flex flex-col gap-2">
                <label for="rating" class="text-lg font-semibold text-amber-700">Rating:</label>
                <input type="text" id="rating" name="rating" placeholder="Enter the home rating"
                    class="border border-amber-400 rounded-lg px-4 py-2 focus:outline-none focus:border-amber-700 transition text-gray-800 bg-amber-50">
            </div>
            <div class="flex flex-col gap-2">
                <label for="photo" class="text-lg font-semibold text-amber-700">Photo:</label>
                <input type="text" id="photo" name="photoUrl" placeholder="Enter photo url"
                    class="border border-amber-400 rounded-lg px-4 py-2 focus:outline-none focus:border-amber-700 transition text-gray-800 bg-amber-50">
            </div>
            <button type="submit"
                class="bg-amber-500 hover:bg-amber-700 text-white font-bold py-3 rounded-lg shadow-md transition">
                Submit
            </button>
        </form>
    </div>
</body>

</html>