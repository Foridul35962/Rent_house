<%-include('../partials/head') %>

    <body>
        <%-include('../partials/nav') %>
            <div class="p-10 max-w-4xl mx-auto bg-white rounded-2xl shadow-lg border border-gray-200">
                <h1 class="text-4xl text-indigo-700 text-center font-extrabold mb-8 tracking-tight">
                    Home Details
                </h1>
                <div class="flex flex-col md:flex-row items-center gap-10 p-6 bg-gradient-to-br from-indigo-50 to-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300">
                    <img src="<%= home.photoUrl %>" alt="Photo"
                        class="w-56 h-56 object-cover rounded-2xl shadow border-2 border-indigo-200">
                    <div class="flex-1 space-y-5">
                        <h2 class="text-2xl font-bold text-indigo-900">
                            <%= home.houseName %>
                        </h2>
                        <p class="text-lg text-white bg-indigo-500 rounded px-5 py-2 shadow font-semibold inline-block">
                            $<%= home.price %> / month
                        </p>
                        <p class="text-indigo-700 font-semibold">
                            Rating: <span class="font-extrabold">
                                <%= home.rating %>
                            </span>
                        </p>
                        <p class="text-gray-600">
                            Location: <span class="font-bold">
                                <%= home.location %>
                            </span>
                        </p>
                        <p class="text-gray-600">
                            Description: <span class="font-bold">
                                <%= home.description %>
                            </span>
                        </p>
                    </div>
                </div>
                <div class="mt-8 text-center">
                    <%-include('../partials/favourite')%>
                </div>
            </div>
    </body>

    </html>